<xml>
  <object name="FlightStatsSettings" settings="true" singleinstance="true">
    <description>Settings for the FlightStats module</description>
    <access gcs="readwrite" flight="readwrite"/>
    <logging updatemode="manual" period="0"/>
    <telemetrygcs acked="true" updatemode="onchange" period="0"/>
    <telemetryflight acked="true" updatemode="onchange" period="0"/>
    <field defaultvalue="ResetOnArm" elements="1" name="StatsBehavior" type="enum" units="">
      <description>Specifies when the statistics should be reset</description>
      <options>
        <option>ResetOnArm</option>
        <option>ResetOnBoot</option>
      </options>
    </field>
  </object>
</xml>
