<xml>
  <object name="LoiterCommand" settings="false" singleinstance="true">
    <description>Requested movement while in loiter mode</description>
    <access gcs="readwrite" flight="readwrite"/>
    <logging updatemode="manual" period="0"/>
    <telemetrygcs acked="false" updatemode="manual" period="0"/>
    <telemetryflight acked="false" updatemode="throttled" period="1000"/>
    <field defaultvalue="0" elements="1" name="Pitch" type="float" units="">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Roll" type="float" units="">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Thrust" type="float" units="">
      <description/>
    </field>
    <field defaultvalue="Body" elements="1" name="Frame" type="enum" units="">
      <description/>
      <options>
        <option>Body</option>
        <option>Earth</option>
      </options>
    </field>
  </object>
</xml>
