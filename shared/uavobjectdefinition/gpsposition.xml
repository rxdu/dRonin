<xml>
  <object name="GPSPosition" settings="false" singleinstance="true">
    <description>Raw GPS data from @ref GPSModule. </description>
    <access gcs="readwrite" flight="readwrite"/>
    <logging updatemode="periodic" period="1000"/>
    <telemetrygcs acked="false" updatemode="manual" period="0"/>
    <telemetryflight acked="false" updatemode="throttled" period="2000"/>
    <field defaultvalue="NoGPS" elements="1" name="Status" type="enum" units="">
      <description/>
      <options>
        <option>NoGPS</option>
        <option>NoFix</option>
        <option>Fix2D</option>
        <option>Fix3D</option>
        <option>Diff3D</option>
      </options>
    </field>
    <field defaultvalue="0" elements="1" name="Latitude" type="int32" units="degrees x 10^-7">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Longitude" type="int32" units="degrees x 10^-7">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Altitude" type="float" units="meters">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="GeoidSeparation" type="float" units="meters">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Heading" type="float" units="degrees">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Groundspeed" type="float" units="m/s">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Satellites" type="uint8" units="">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="Accuracy" type="float" units="m">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="PDOP" type="float" units="">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="HDOP" type="float" units="">
      <description/>
    </field>
    <field defaultvalue="0" elements="1" name="VDOP" type="float" units="">
      <description/>
    </field>
  </object>
</xml>
